<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title>NEED IT GOT IT</title>
</head>
<body>
  <h1>NEED IT GOT IT</h1>
  <div class="topnav">
    <a href="/stores">STORES</a>
    <a href="/logout">LOG OUT</a>
    <a href="/auth/google" class="login">LOG IN&nbsp;</a>
  </div>
    <section id="stores-page">
        <div>STORE:</div>
        <div>
          <%= store.name %>
        </div>
        <br>
        <br>
        <br><br>

        <br><br>
        <h2>ITEMS</h2>
      
        <% if (user) { %>
          <form id="add-item-form" method="POST" action="/stores/<%= store._id %>/items">
            <label>Items:</label>
            <textarea name="content"></textarea>
            <input type="submit" value="NEED IT">
          </form>
          <% } else { %>
      
      
            <% } %>
      
              <% if (store.items.length) { %>
                <table>
                  <thead>
                    <tr>
                      <th>ITEMS</th>
                    </tr>
                  </thead>
                  <tbody>
                      <% store.items.forEach(function(r) { %>
      
                          <tr>
                            <td class="items-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer" ><%= r.userName %></td>
                            <td>
                            </td>
                            <td>
                              <%= r.content %>
                            </td>
                            <td>
                              <% r.store.items %> 
                            </td>
                            <td>
                              <% if (user && user._id.equals(r.user)) { %>
                                <form action="/items/<%= r._id %>?_method=DELETE" method="POST">
                                  <button type="submit">X</button>
                                </form>
                              <% } %>
                            </td>
                          </tr>
                          <% }); %>
                            <tr>

                                  <%= (total / store.items.length).toFixed(1) %>
                                </strong></td>
                            </tr>
                  </tbody>
                </table>
                <% } else { %>
                  <h5>No Items Yet</h5>
                  <% } %>
      
</body>
</html>