
    <section id="items-page">
        <div>STORE: </div>
        <div>
          <%= store.name %>
        </div>
        <br><br>
        <h2>Reviews</h2>
      
        <% if (user) { %>
          <form id="add-items-form" method="POST" action="/stores/<%= movie._id %>/items">
            <label>Review:</label>
            <textarea name="content"></textarea>
            <input type="submit" value="Add Item">
          </form>
          <% } else { %>
      
            <span>You have to login in order to submit a</span>
      
            <% } %>
      
              <% if (store.items.length) { %>
                <table>
                  <thead>
                    <tr>
                      <th>Date</th>
                      <th>Review</th>
                      <th>Rating</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% let total=0 %>
                      <% store.items.forEach(function(r) { %>
                        <% total +=r.rating %>
      
                          <tr>
                            <td class="items-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer" ><%= r.userName %></td>
                            <td>
                              <%= r.createdAt.toLocaleDateString() %>
                            </td>
                            <td>
                              <%= r.content %>
                            </td>
                            <td>
                              <%= r.rating %>
                            </td>
                            <td>
                              <% if (user && user._id.equals(r.user)) { %>
                                <form action="/items/<%= r._id %>?_method=DELETE" method="POST">
                                  <button type="submit">X</button>
                                </form>
                              <% } %>
                            </td>
                    
                
                          </tr>
                          <% }); %>
                            <tr>
                              <td colspan="2"></td>
                              <td><strong>
                                  <%= (total / store.items.length).toFixed(1) %>
                                </strong></td>
                            </tr>
                  </tbody>
                </table>
                <% } else { %>
                  <h5>No Reviews Yet</h5>
                  <% } %>
      
      
</body>
</html>